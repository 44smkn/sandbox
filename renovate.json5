{
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/.+--mirror-images.yaml"],
      "matchStrings": [
        "- name: (?<depName>.*?)\\s.*tag: (?<currentValue>.*?) # renovate\\s",
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker",
    },
    {
        "fileMatch": ["system-components/.*/runnerdeployment/.+.yaml"],
        "matchStrings": [
          "image: public\\.ecr\\.aws\\/.+\\/mirrors\\/(?<depName>.+?):(?<currentValue>.+?)\\n",
        ],
        "datasourceTemplate": "docker",
        "versioningTemplate": "docker",
    },
  ],
}